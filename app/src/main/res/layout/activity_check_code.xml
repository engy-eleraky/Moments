<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.example.admin.moments.signing.CheckCodeActivity">

    <TextView
        android:id="@+id/codeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/code"
        android:layout_margin="16dp"
        android:padding="8dp"
        android:textColor="@color/textPrimaryColor"
        android:background="@drawable/code_text_view_shape"
        android:textSize="36sp"/>

    <ImageButton
        android:id="@+id/shareButton"
        android:src="@drawable/ic_menu_share"
        android:background="@drawable/input_shape"
        android:padding="16dp"
        android:contentDescription="@string/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center"
        android:text="@string/send"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center"
        android:text="Or"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center"
        android:text="@string/enter"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <EditText
            android:id="@+id/codeEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="_ _ _ _ _ _"
            android:drawableBottom="@drawable/bottom_line"
            android:inputType="text"
            android:gravity="center"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/enterCodeButton"
        android:text="@string/done"
        style="@style/ActionButtonStyle"/>
</LinearLayout>
