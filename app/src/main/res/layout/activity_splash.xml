<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.moments.SplashActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/icon1"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/margin_bottom"
        android:layout_marginStart="@dimen/margin_start"
        android:text="@string/welcome"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_welcome"
        android:textStyle="italic"
        android:theme="@style/Base.TextAppearance.AppCompat.Large.Inverse" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/image_dimen"
        android:layout_height="@dimen/image_dimen"
        android:layout_alignBottom="@+id/textView"
        android:layout_marginStart="@dimen/margin_start_image"
        android:layout_toEndOf="@+id/textView"
        app:srcCompat="@drawable/heart"
        android:layout_marginRight="4dp"/>


</RelativeLayout>
