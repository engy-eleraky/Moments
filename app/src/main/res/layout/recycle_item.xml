<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/padding_start">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/layout_width_circle"
        android:layout_height="@dimen/layout_width_circle"
        android:src="@drawable/icon"
        android:id="@+id/circleImageMessage" />

    <RelativeLayout
        android:id="@+id/linearLayout2"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@+id/circleImageMessage"
        android:background="@drawable/messgae_text">

        <TextView
            android:id="@+id/textmessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="13dp"
            android:layout_toEndOf="@+id/time"
            android:text="@string/message_text"
            android:textSize="@dimen/text_size" />

        <!--  <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:id="@+id/messageImage"
            android:layout_margin="@dimen/margin_top_text"
            android:contentDescription="@string/itemimage" />
            -->
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textmessage"
            android:layout_marginStart="15dp"
            android:text="10:45"
            android:textSize="@dimen/text_time" />


    </RelativeLayout>

</RelativeLayout>