<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/padding_left">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/layout_width_circle"
        android:layout_height="@dimen/layout_width_circle"
        android:src="@drawable/icon"
        android:id="@+id/circleImageMessage" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/margin_start_recycle"
        android:background="@drawable/messgae_text"
        android:id="@+id/linearLayout2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size"
            android:text="@string/message_text"
            android:id="@+id/textmessage"
            android:layout_marginLeft="@dimen/margin_top_text"
            android:layout_marginRight="@dimen/margin_top_text"
            android:layout_marginBottom="@dimen/margin_top_text"
            android:layout_marginTop="@dimen/margin_top_text"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:id="@+id/messageImage"
            android:layout_margin="@dimen/margin_top_text"
            />
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_text"
            android:layout_marginBottom="@dimen/margin_top_text"
            android:layout_marginLeft="@dimen/margin_start_text"
            android:layout_marginRight="@dimen/margin_top_text"
            android:text="@string/message_time"
            android:textSize="@dimen/text_time" />


    </LinearLayout>

</RelativeLayout>