<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="20dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_start">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageMessage1"
        android:layout_width="@dimen/layout_width_circle"
        android:layout_height="@dimen/layout_width_circle"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/icon" />

    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@+id/circleImageMessage1"
        android:background="@drawable/text_view_shape">

        <!-- <ImageView
            android:id="@+id/messageImage1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/item_image"
            android:scaleType="centerCrop" />
-->
        <TextView
            android:id="@+id/textmessage1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/time1"
            android:text="@string/message_text"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/time1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/textmessage1"
            android:layout_marginEnd="12dp"
            android:text="11:45"
            android:textSize="16sp" />

    </RelativeLayout>

</RelativeLayout>