<?xml version="1.0" encoding="utf-8"?>



    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/margin_top"
        android:id="@+id/linearLayout3">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size"
            android:text="@string/message_text"
            android:id="@+id/messageWidget"
            android:layout_marginLeft="@dimen/margin_top_text"
            android:layout_marginRight="@dimen/margin_top_text"
            android:layout_marginBottom="@dimen/margin_top_text"
            android:layout_marginTop="@dimen/margin_top_text"/>


        <TextView
            android:id="@+id/timeWidget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:text="@string/message_time"
            android:textSize="16sp" />


    </LinearLayout>


